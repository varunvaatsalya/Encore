<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Payment Details</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Marhey:wght@300..700&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Caveat:wght@500&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Montserrat&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Bad+Script&family=Charm&family=Leckerli+One&family=Open+Sans:wght@300&family=Satisfy&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Ephesis&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Marhey:wght@300..700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap");

    * {
      margin: 0px;
      padding: 0px;
    }

    body {
      font-family: "Marhey", sans-serif;
      font-optical-sizing: auto;
      margin: 0;
      padding: 0;
      background-image: url(res/bg.jpg);
      position: relative;
      background-attachment: fixed;
      background-repeat: no-repeat;
      background-size: cover;
      min-height: 100vh;
      background-position: center;
      color: #fff;
      box-sizing: border-box;
    }

    h2 {
      font-weight: 600;
    }

    h3 {
      font-weight: 200;
    }

    header {
      background-color: #0000006c;
      font-family: "Marhey", sans-serif;
    }

    .logoDiv {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 200px;
    }

    .logo {
      max-width: 150px;
    }

    header li {
      list-style: none;
      font-size: 1.2rem;
      font-family: var(--main-font);
    }

    header a {
      text-decoration: none;
      color: #fff;
      font-size: 1.2rem;
      font-family: var(--main-font);
      font-weight: var(--main-weight-a);
      padding: 0.5rem 1rem;
      border: none;
      outline: none;
      border-radius: 20px;
    }

    a:hover {
      color: orange;
    }

    header {
      position: relative;
      padding: 0 2rem;
    }

    .navbar {
      width: 100%;
      height: 75px;
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .navbar .links {
      display: flex;
      gap: 2rem;
    }

    .navbar .toggle_btn {
      color: #fff;
      font-size: 1.5rem;
      cursor: pointer;
      display: none;
    }

    .action_btn {
      background-color: rgba(0, 0, 0, 0.273);
      font-family: var(--main-font);
      color: rgb(255, 248, 125);
      padding: 0.5rem 1rem;
      border: none;
      outline: none;
      border-radius: 20px;
      font-size: 1.2rem;
      font-weight: bold;
      cursor: pointer;
    }

    .action_btn:hover {
      scale: 1.05;
      color: #fff;
    }

    .action_btn:active {
      scale: 0.95;
    }

    .dropdown_menu {
      display: none;
      position: absolute;
      right: 2rem;
      top: 60px;
      height: 0;
      width: 300px;
      background: rgba(255, 255, 255, 0.021);
      backdrop-filter: blur(12px);
      border-radius: 10px;
      overflow: hidden;
      transition: height 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      z-index: 3;
    }

    .dropdown_menu.open {
      height: auto;
    }

    .dropdown_menu li {
      padding: 5px 0.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .dropdown_menu .action_btn {
      width: 100%;
      display: flex;
      background-color: rgba(0, 0, 0, 0.536);
      color: rgb(255, 248, 125);
      justify-content: center;
    }

    .dropdown_menu .dd_btn {
      width: 100%;
      display: flex;
      justify-content: center;
      background-color: #ffffff00;
    }

    .flex {
      display: flex;
      justify-content: center;
      margin: 10px auto;
    }

    .name {
      width: 42vw;
    }

    .rupee {
      width: 18vw;
    }

    .totalname {
      /* padding-left: 15px; */
      width: 40vw;
    }

    .totalrupee {
      width: 22vw;
    }

    .font {
      font-size: 25px;
    }

    .fonttotal {
      padding-left: 15px;
    }

    .totalhr {
      width: 65vw;
      margin: 15px auto;
    }
    .headinghr{
      border: 1px solid rgba(128, 128, 128, .5);
    }

    .payment {
        text-decoration: none;
        
    }
    .payment-section{
        margin: auto;
        max-width: 90vw;
        display: flex;
        justify-content: center;
    }

    @media (max-width: 992px) {

      .navbar .links,
      .navbar .action_btn {
        display: none;
      }

      .navbar .toggle_btn {
        display: block;
      }

      .dropdown_menu {
        display: block;
      }
    }

    @media (max-width: 576px) {
      .dropdown_menu {
        left: 2rem;
        width: unset;
      }
    }

    .container {
      margin: 30px auto;
      max-width: 95vw;
      min-height: 65vh;
      background-color: rgba(0, 0, 0, 0.4);
      padding-bottom: 1px;
      padding-top: 12px;
      border-radius: 14px;
    }

    .section {
      margin: -20px auto;
      background-color: rgba(0, 0, 0, 0.586);
      height: 35vh;
      width: 90%;
      padding-top: 40px;
    }

    .main-heading {
      margin: 0px auto;
      text-align: center;
    }

    .heading {
      text-align: center;
    }
    .mask {
      -webkit-mask:
            radial-gradient(circle 30px at left    center ,#0000 98%,#000) left    center,
        radial-gradient(circle 30px at right    center,#0000 98%,#000) right    center;
        -webkit-mask-size:80% 80%;
      -webkit-mask-repeat:no-repeat;
          }
  </style>
</head>

<body>
  <header>
    <div class="navbar">
      <div class="logoDiv">
        <img src="res/logo.png" alt="logo" class="logo" />
      </div>
      <ul class="links">
        <li><a href="/home">Home</a></li>
        <li><a href="/events">Events</a></li>
        <li><a href="/sponser">Sponsors</a></li>
      </ul>
      <a href="/profile" class="action_btn">Profile</a>
      <div class="toggle_btn">
        <i class="fa-solid fa-bars"></i>
      </div>
    </div>

    <div class="dropdown_menu">
      <li><a href="/home" class="dd_btn">Home</a></li>
      <li><a href="/events" class="dd_btn">Events</a></li>
      <li><a href="/sponsor" class="dd_btn">Sponsors</a></li>
      <li><a href="/profile" class="action_btn">Profile</a></li>
    </div>
  </header>

  <div class="container">
    <h2 class="main-heading">Payment Details</h2>
    
    <div class="payment-section">
      <div class="payment action_btn"><button onclick="popup('encore24-301243');" class="tsbutton">
          Pay Now
        </button>
        <noscript id="tsNoJsMsg"
          >Javascript on your browser is not enabled.</noscript
        >
        <script
          src="https://www.townscript.com/static/Bookingflow/js/townscript-widget.nocache.js"
          type="text/javascript"
        ></script></div>
    </div>

    <div class="section mask">
      <h2 class="heading">Non-accommodation</h2>
      <hr class="headinghr">
      <div>
        <div class="flex">
          <div class="name">Encore fees</div>
          <div class="rupee">&#x20b9; 1200</div>
        </div>
        <div class="flex">
          <div class="name">accommodation</div>
          <div class="rupee">-</div>
        </div>
        <hr class="totalhr">
        <div class="flex">
          <div class="totalname">
            <div class="font fonttotal">Total</div>
          </div>
          <div class="totalrupee"><span class="font">&#x20b9; 1200</span> + Taxes</div>
        </div>
      </div>
    </div>
    <div class="section mask">
      <h2 class="heading">accommodation</h2>
      <hr class="headinghr">
      <div>
        <div class="flex">
          <div class="name">Encore fees</div>
          <div class="rupee">&#x20b9; 1200</div>
        </div>
        <div class="flex">
          <div class="name">accommodation</div>
          <div class="rupee">&#x20b9; 300</div>
        </div>
        <hr class="totalhr">
        <div class="flex">
          <div class="totalname">
            <div class="font fonttotal">Total</div>
          </div>
          <div class="totalrupee"><span class="font">&#x20b9; 1500</span> + Taxes</div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://kit.fontawesome.com/536b7f8348.js" crossorigin="anonymous"></script>
  <script>
    const toggleBtn = document.querySelector(".toggle_btn");
    const toggleBtnTcon = document.querySelector(".toggle_btn i");
    const dropDownMenu = document.querySelector(".dropdown_menu");

    toggleBtn.onclick = function() {
      dropDownMenu.classList.toggle("open");
    };
  </script>
</body>

</html>